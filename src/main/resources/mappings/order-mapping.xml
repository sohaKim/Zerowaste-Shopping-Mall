<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappings.order-mapping">

	
	<!-- 주문번호 Oseq 생성--> 
	<select id="selectMaxOseq" resultType="int">
		SELECT NVL2(MAX(oseq), MAX(oseq)+1,1) FROM orders
	</select>

	
	<!-- 새로운 주문 생성, oseq 결제 완료처리-->   
	<insert id="insertOrder">
		INSERT INTO orders(oseq,id) VALUES(#{oseq},#{id})
	</insert>


	<!-- 주문 상세 테이블에 상품 상세정보 생성 --> 
	<insert id="insertOrderDetail">
		INSERT INTO order_detail(odseq,oseq,pseq,quantity)
		VALUES (order_detail_seq.NEXTVAL,#{oseq},#{pseq},#{quantity})
	</insert>


	<!--▶  장바구니에서 결제하기 버튼 클릭시,  주문진행 페이지(checkout.jsp)에 oseq외  회원, 상품정보 가져오기-->
	<!--▶  김소연 신규추가 03.07 -->
	<select id="OrderProcess" resultType="order">
		SELECT * FROM order_process_view
		WHERE id=#{id}	
	</select>
	
	<!--▶  주문진행 페이지(checkout.jsp)에서 입력된 정보를 주문 (order_detail) 테이블에 저장하기-->
	<!--▶  김소연 신규추가 03.07 --> 
	<!--  
	<insert id="insertOrderDetail">
		INSERT INTO orders(oseq, email, zonecode, roadaddr, detailaddr, phone, pseq, quantity, price2, shiprequest, paymethod, result)
		VALUES (orders_seq.NEXTVAL, #{email}, #{zonecode}, #{roadaddr}, #{detailaddr}, #{phone}, #{pseq},
				 #{quantity}, #{price2}, #{shiprequest}, #{paymethod}, #{result})
	</insert>	
	--> 

		
	<!--▶  주문테이블에 삽입 완료 후 인보이스 호출-->
	<!--▶  김소연 신규추가 03.08 --> 
	<select id="orderDetailInvoice" resultType="order">
		SELECT * FROM order_detail
		WHERE oseq=#{oseq}		
	</select>	
		
		
	<!-- 마이페이지 -->
	<!-- 주문내역 조회 -->
	<select id="listOrderById" resultType="order">
		SELECT * FROM order_view
		WHERE id=#{id} 
			AND result LIKE '%'||#{result}||'%'
			AND oseq=#{oseq}
	</select>
	
	
	<!-- 사용자별 주문번호 목록 조회 -->
	<select id="selectSeqOrdering" resultType="int">
		SELECT distinct oseq FROM order_view
		 WHERE id=#{id}
		  AND result LIKE '%'||#{result}||'%'
		 ORDER BY oseq DESC
	</select>
	
	<!--  ▶ Admin -->
	<!-- 전체 주문내역 조회-->
	<select id="listOrder" resultType="order">
		SELECT * FROM order_view 
		WHERE mname LIKE '%'||#{key}||'%'
		ORDER BY result,oseq DESC
	</select>
	
	<!--  ▶ Admin -->
	<!-- 주문완료 처리 -->
	<update id="updateOrderResult">
		UPDATE order_detail 
		SET result='2' 
		WHERE odseq=#{odseq}
	</update>
	
	<!--  ▶ Admin -->
	<!-- 주문처리상태별 보기 -->
	<select resultType="order" id="selectOrderByResult">
		SELECT * FROM order_view WHERE result=#{result} ORDER BY odseq
	</select>
	
</mapper>